{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@core/*": [
        "src/main/core/*"
      ],
      "@definitions/*": [
        "src/main/definitions/*"
      ],
      "@util/*": [
        "src/main/util/*"
      ]
    }
  }
}
